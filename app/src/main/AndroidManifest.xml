        <activity
            android:name=".activities.backMain"
            android:parentActivityName=".activities.Home" />
        <activity
            android:name=".activities.chestMain"
            android:parentActivityName=".activities.Home" />
        <activity
            android:name=".activities.absMain"
            android:parentActivityName=".activities.Home" />
        <activity
            android:name=".activities.legsMain"
            android:parentActivityName=".activities.Home" />
        <activity
            android:name=".activities.calvesMain"
            android:parentActivityName=".activities.Home" />
        <activity
            android:name=".activities.cardioMain"
            android:parentActivityName=".activities.Home" />
